@model SalesWebProject.Models.Seller;
@{
	ViewData["Tittle"] = "Create";

}

<h1> @ViewData["Tittle"]</h1>

<h4>Seller</h4>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="control-label" />
			</div>

			<div class="form-group">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="control-label" />
			</div>

			<div class="form-group">
				<label asp-for="BirthDate" class="control-label"></label>
				<input asp-for="BirthDate" class="control-label" />
			</div>

			<div class="form-group">
				<label asp-for="BaseSalary" class="control-label"></label>
				<input asp-for="BaseSalary" class="control-label" />
			</div>
			<div class="from-group"><input type="submit" value="Create" class="Btn btn-primary"></input></div>
		</form>
	</div>
</div>