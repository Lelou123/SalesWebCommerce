@model SalesWebProject.Models.ViewModels.SellerFormViewModel;
@{
	ViewData["Tittle"] = "Edit";

}

<h1> @ViewData["Tittle"]</h1>

<h4>Seller</h4>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<input type="hidden" asp-for="Seller.Id">
			<div class="form-group mt-2">
				<label asp-for="Seller.Name" class="control-label"></label>
				<input asp-for="Seller.Name" class="control-label" />				
			</div>

			<div class="form-group mt-2">
				<label asp-for="Seller.Email" class="control-label"></label>
				<input asp-for="Seller.Email" class="control-label" />
			</div>

			<div class="form-group mt-2">
				<label asp-for="Seller.BirthDate" class="control-label"></label>
				<input asp-for="Seller.BirthDate" class="control-label" />
			</div>

			<div class="form-group mt-2">
				<label asp-for="Seller.BaseSalary" class="control-label"></label>
				<input asp-for="Seller.BaseSalary" class="control-label" />
			</div>
			<div class="form-group mt-2">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
			<div class="from-group mt-3"><input type="submit" value="Save" class="btn btn-primary"/></div>
			<a asp-action="Index">Back to list</a>		
		</form>
		
	</div>
	
</div>